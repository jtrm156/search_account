<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gd_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gd_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gd_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="20dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gd_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp"/>

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="63dp"
        android:layout_height="83dp"
        app:srcCompat="@drawable/icon_user"
        app:layout_constraintLeft_toRightOf="@id/gd_left"
        app:layout_constraintTop_toBottomOf="@+id/gd_top"
        />

    <TextView
        android:id="@+id/item_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#817D7D"
        app:layout_constraintLeft_toRightOf="@id/item_image"
        app:layout_constraintTop_toBottomOf="@+id/gd_top"/>

    <TextView
        android:id="@+id/item_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="30dp"
        android:textColor="#BF3030"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/item_image"
        app:layout_constraintTop_toBottomOf="@+id/item_txt1"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/item_txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#817D7D"
        app:layout_constraintTop_toBottomOf="@+id/gd_top"
        app:layout_constraintRight_toLeftOf="@id/gd_right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>